<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:id="@+id/bodyRelative"
    android:background="@drawable/bg_row_rc_fr_menu"
    android:clickable="true" >


    <TextView
        android:id="@+id/equipoNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.87"
        android:gravity="left"
        android:padding="4dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorTextPrimary"
        android:text="Nombre de Equipo"
        android:textSize="22sp" />

    <LinearLayout
        android:weightSum="13"
        android:id="@+id/principal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/equipoNombre">


        <ImageView
            android:layout_weight="2"
            android:id="@+id/equipoImage00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher"/>
        <ImageView
            android:layout_weight="2"
            android:id="@+id/equipoImage01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher"/>
        <ImageView
            android:layout_weight="2"
            android:id="@+id/equipoImage02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher"/>
        <ImageView
            android:layout_weight="2"
            android:id="@+id/equipoImage03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher"/>
        <ImageView
            android:layout_weight="2"
            android:id="@+id/equipoImage04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher"/>
        <ImageView
            android:layout_weight="2"
            android:id="@+id/equipoImage05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher"/>

        <ImageView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/showOrHideContentButton"
            android:src="@drawable/ic_visibility_black_36dp"       />

    </LinearLayout>





        <LinearLayout
            android:gravity="center"
            android:id="@+id/contenedorInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/principal"
            android:orientation="vertical"
            >



            <ImageView
                android:id="@+id/imgJump"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu_base_00" />

            <TextView
                android:id="@+id/equipoHa1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:alpha="0.87"
                android:padding="4dp"
                android:textColor="@color/colorTextPrimary"
                android:text="Hab num 1 "
                android:textSize="14sp" />
            <TextView
                android:id="@+id/equipoHa2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:alpha="0.87"
                android:padding="4dp"
                android:textColor="@color/colorTextPrimary"
                android:text="Hab num 2 "
                android:textSize="14sp" />
            <TextView
                android:id="@+id/equipoHa3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:alpha="0.87"
                android:padding="4dp"
                android:textColor="@color/colorTextPrimary"
                android:text="Hab num 3 "
                android:textSize="14sp" />
            <TextView
                android:visibility="visible"
                android:id="@+id/equipoHa4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:alpha="0.87"
                android:padding="4dp"
                android:textColor="@color/colorTextPrimary"
                android:text="Hab num 4 "
                android:textSize="14sp" />
            <TextView
                android:visibility="visible"
                android:id="@+id/equipoHa5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:alpha="0.87"
                android:padding="4dp"
                android:textColor="@color/colorTextPrimary"
                android:text="Hab num 5 "
                android:textSize="14sp" />
            <TextView
                android:visibility="visible"
                android:id="@+id/equipoHa6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:alpha="0.87"
                android:padding="4dp"
                android:textColor="@color/colorTextPrimary"
                android:text="Hab num 6 "
                android:textSize="14sp" />



        </LinearLayout>




    <ImageView
        android:layout_marginBottom="2dp"
        android:visibility="visible"
        android:layout_marginTop="5dp"
        android:id="@+id/equipoFullView"
        android:foregroundGravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher"
        android:layout_below="@+id/contenedorInfo"
        android:layout_centerHorizontal="true" />






</RelativeLayout>